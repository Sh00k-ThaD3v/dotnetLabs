<BFUTheme>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <BFULayerHost Style="display:flex; flex-direction: row;width:100vw">
                <Microsoft.AspNetCore.Components.Authorization.AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <p>You don't have to this please login</p>
                    </NotAuthorized>
                </Microsoft.AspNetCore.Components.Authorization.AuthorizeRouteView>
            </BFULayerHost>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</BFUTheme>